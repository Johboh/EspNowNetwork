{
  "name": "EspNowNetwork",
  "keywords": "esp32, esp-now, ESP Now, now",
  "description": "Library for setting up a network of ESP NOW nodes",
  "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
  "authors":
  {
    "name": "Johan BÃ¶hlin"
  },
  "version": "0.6.4",
  "license": "MIT",
  "repository":
  {
    "type": "git",
    "url": "https://github.com/Johboh/EspNowNetwork.git"
  },
  "build": {
      "libLDFMode": "deep",
      "flags": [
        "-I src/shared",
        "-I src/host",
        "-I src/node"
      ]
  },
  "frameworks": ["espidf", "arduino"],
  "platforms": ["espressif32"],
  "examples": [
    {
      "name": "Arduino Host",
      "base": "examples/arduino/host",
      "files": ["Host.ino"]
    },
    {
      "name": "Arduino Node",
      "base": "examples/arduino/node",
      "files": ["Node.ino"]
    },
    {
      "name": "ESP-IDF Host",
      "base": "examples/espidf/host/main",
      "files": ["main.cpp"]
    },
    {
      "name": "ESP-IDF Node",
      "base": "examples/espidf/node/main",
      "files": ["main.cpp"]
    }
  ],
  "dependencies": []
}